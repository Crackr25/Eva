<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:layout_alignParentStart="true"
            android:id="@+id/fram2"
            android:layout_width="130dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/peron1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/fram2"
                android:scaleType="centerCrop"
                android:src="@drawable/one"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fram3"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/two">


            <ImageView
                android:id="@+id/peron2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_toEndOf="@+id/fram2"
                android:scaleType="centerCrop"
                android:src="@drawable/two">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_alignLeft="@id/fram2"
            android:layout_below="@id/fram2">
        </TextView>


        <Button
            android:id="@+id/following"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Follow"
            android:textColor="#000000"
            android:textColorHighlight="#31FFFFFF"
            android:textSize="5sp"
            app:backgroundTint="#FFFFFF"
            android:layout_marginTop="5dp"
            app:cornerRadius="10dp"
            app:strokeColor="#000000"
            android:layout_alignLeft="@id/fram2"
            android:layout_below="@id/name1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_below="@id/name1"
            android:layout_alignEnd="@id/fram2"
            android:text="Visit"
            android:textColor="#000000"
            android:textColorHighlight="#31FFFFFF"
            android:textSize="5sp"
            android:layout_marginTop="5dp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:layout_alignLeft="@id/fram3"
            android:layout_below="@id/fram3">
        </TextView>







        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Follow"
            android:textColor="#000000"
            android:textColorHighlight="#31FFFFFF"
            android:textSize="5sp"
            android:layout_marginTop="5dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="10dp"
            android:layout_alignLeft="@id/fram3"
            android:layout_below="@id/name2"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="Visit"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textColorHighlight="#31FFFFFF"
            android:textSize="5sp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="10dp"
            android:layout_alignEnd="@id/fram3"
            android:layout_below="@id/name2" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>