<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    xmlns:anroid="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="match_parent">



    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/Ppic1"
        app:cardCornerRadius="20dp"

        >

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/two"
            android:contentDescription="cover"/>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:layout_width="100dp"
        android:layout_marginTop="135dp"
        android:layout_marginStart="20dp"
        android:layout_height="100dp"
        android:id="@+id/Profilepic"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/Ppic"
            anroid:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gwapo" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/Username"
        android:layout_below="@+id/Profilepic"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="15dp">

    </TextView>

 <TextView
     android:id="@+id/bio"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Digital, Sketch, Painting"
     android:layout_below="@id/Username"
     android:textSize="14sp"
     android:layout_marginStart="15sp"
     android:textColor="@color/black">
 </TextView>

 <TextView
     android:id="@+id/numfollowers"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="140"
     android:layout_marginStart="90dp"
     android:layout_toEndOf="@id/Username"
     android:textSize="20sp"
     android:textStyle="bold"
     android:layout_below="@+id/Profilepic"
     android:textColor="@color/black">

 </TextView>
    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="followers"
        android:id="@+id/dummy"
     android:layout_below="@id/numfollowers"
        android:layout_toEndOf="@id/Username"
        android:textSize="12sp"
     android:layout_marginStart="90dp"
     android:textColor="@color/black">
    </TextView>

    <TextView
     android:id="@+id/numfollowing"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="150"
     android:layout_marginStart="60dp"
     android:layout_toEndOf="@id/numfollowers"
     android:textSize="20sp"
     android:textStyle="bold"
     android:layout_below="@+id/Profilepic"
     android:textColor="@color/black">

 </TextView>
    <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="following"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/dummy"
     android:layout_below="@id/numfollowing"
        android:textSize="12sp"
     android:textColor="@color/black">

 </TextView>

    <Button
        android:id="@+id/gridview"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bio"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/white"
        android:text="Grid View"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textColorHighlight="#f19c79"
        android:textColor="@color/black"
        app:cornerRadius="10dp">

    </Button>
    <Button
        android:id="@+id/horizontalScrollView"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bio"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:text="Scroll View"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:textColorHighlight="#f19c79"
        android:textColor="@color/black"
        app:cornerRadius="10dp">

    </Button>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="440dp"
        android:id="@+id/replacement2">

    </FrameLayout>







</RelativeLayout>