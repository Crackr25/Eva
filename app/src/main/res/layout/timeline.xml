<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">



        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pic1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pic"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one"
            android:background="#ffffff">

        </ImageView>
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/pic1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp"
            android:tint="@color/black"
            android:background="@null"
            android:src="@drawable/like">

        </ImageButton>

        <ImageButton
            android:id="@+id/comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:tint="@color/black"
            android:layout_below="@+id/pic1"
            android:layout_alignLeft="@+id/follow"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:src="@drawable/comment">

        </ImageButton>



        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/follow"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whats on your mind"
            android:textColor="@color/black"
            android:layout_below="@id/username"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/reactors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="You and 134 like this posr"
            android:layout_below="@id/pic1"
            android:layout_alignEnd="@id/pic1" />

        <TextView
            android:id="@+id/commentcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comment"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:layout_below="@id/reactors"
            android:layout_alignEnd="@id/pic1" />



    </RelativeLayout>





</androidx.cardview.widget.CardView>








