<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">





<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:textAlignment="center">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Ppic1"
        app:cardCornerRadius="40dp">


    <ImageView
        android:id="@+id/Ppic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gwapo"
        android:contentDescription="profilepic"/>

    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/followbut"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/Ppic1"
        android:text="Follow"
        android:textColor="#000000"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="40dp"
        app:strokeColor="#000000">

    </Button>

    <TextView
        android:id="@+id/Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/followbut"
        android:layout_toEndOf="@+id/Ppic1"
        android:text="Username"
        android:layout_marginTop ="0dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black">

    </TextView>


    <TextView
        android:id="@+id/numberfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Username"
        android:layout_toEndOf="@+id/Ppic1"
        android:text="100 Followers"
        android:layout_marginTop ="0dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black">

    </TextView>

    <TextView
        android:id="@+id/Tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/followbut"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Username"
        android:text="| Digital Art, Painting, Sketching"
        android:textAlignment="viewEnd"
        android:textColor="@color/black">

    </TextView>



</RelativeLayout>

</androidx.cardview.widget.CardView>